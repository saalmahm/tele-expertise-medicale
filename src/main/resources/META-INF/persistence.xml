<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    
    <persistence-unit name="tele-expertise-pu" transaction-type="RESOURCE_LOCAL">
        <!-- SUPPRIMEZ la ligne <provider> -->
        
        <!-- Liste de toutes les entités JPA -->
        <class>org.example.teleexpertisemedicale.entity.Patient</class>
        <class>org.example.teleexpertisemedicale.entity.SignesVitaux</class>
        <class>org.example.teleexpertisemedicale.entity.MedecinGeneraliste</class>
        <class>org.example.teleexpertisemedicale.entity.Consultation</class>
        <class>org.example.teleexpertisemedicale.entity.ActeTechnique</class>
        
        <properties>
            <!-- Connexion à PostgreSQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tele_expertise"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="salmahm"/>
            
            <!-- Dialect pour PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- Crée automatiquement les tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- Affiche les requêtes SQL dans la console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>